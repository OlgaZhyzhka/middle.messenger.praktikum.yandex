<form class="form form_horizontal form_auth">
  <h1 class="form__title">Connect easily with your family and friends over countries</h1>
  <span class="form__error"></span>
  <div class="form__row is-error">
    <input class="ui-input ui-input_sm" type="email" name="userEmail" placeholder="Email" />
    <span class="form__error">Please enter a valid email address</span>
  </div>
  <div class="form__row is-success">
    <input class="ui-input ui-input_sm" type="text" name="userLogin" placeholder="Login" />
      <span class="form__error"></span>
  </div>
  <div class="form__row">
    <input class="ui-input ui-input_sm" type="text" name="userFirstName" placeholder="First Name" />
      <span class="form__error"></span>
  </div>
  <div class="form__row">
    <input class="ui-input ui-input_sm" type="text" name="userLastName" placeholder="Last Name" />
      <span class="form__error"></span>
  </div>
  <div class="form__row">
    <input class="ui-input ui-input_sm" type="tel" name="userPhone" pattern='\+7\s\([0-9]{3}\)\s[0-9]{3}-[0-9]{2}-[0-9]{2}' placeholder="Phone +7 (XXX) XXX-XX-XX" title="+7 (XXX) XXX-XX-XX" />
      <span class="form__error"></span>
  </div>
  <div class="form__row">
    <div class="form__wrapper">
      <input class="ui-input ui-input_sm" type='password' name="password" placeholder="Password"/>
      <i class="icon icon_sm icon_base icon_eye is-hover" style="display: none"></i>
      <i class="icon icon_sm icon_base icon_eye-close is-hover"></i>
    </div>
    <span class="form__error"></span>
  </div>
  <div class="form__row">
    <div class="form__wrapper">
      <input class="ui-input ui-input_sm" type='password' name="userConfirmPassword" placeholder="Confirm password"/>
      <i class="icon icon_sm icon_base icon_eye is-hover" style="display: none"></i>
      <i class="icon icon_sm icon_base icon_eye-close is-hover"></i>
    </div>
    <span class="form__error"></span>
  </div>
  <div class="form__footer">
    {{> components/button label="Create account" class="button button_primary button_md button_rounded"}}
    <span class="form__text">Already have an account?</span>
    <a href="/login.html" class="button button_primary-bordered button_md button_rounded">Login</a>
  </div>
</form>